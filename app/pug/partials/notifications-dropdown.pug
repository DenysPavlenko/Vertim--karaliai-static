        +icon({name:'bell', fill:'surfie-green', width:'24', height:'25'})
      .notifications-dropdown__toggle-title 4
    .dropdown__box.notifications-dropdown__box
      .notifications-dropdown__wrap
        .notifications-dropdown__header
          +content-header({title:'Notifications'})(data-dropdown-close="notifications")
