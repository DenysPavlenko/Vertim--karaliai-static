mixin input(props = {})
  -const { classes, label, animated, name } = props
  -
    const classnames = classNames({
      'input__field': true,
      [classes]: classes,
    })

  if(animated)
    .input.js-input-animation
      label.input__label.js-input-animation-label(for=name) #{label}
      input(class=`${classnames} js-input-animation-field` id=name)&attributes(attributes)
  else
    .input
      input(class=classnames)&attributes(attributes)
