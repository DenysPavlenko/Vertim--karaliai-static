mixin status-message(props = {})
  -const { text, icon = {}, color } = props

  .status-message
    .status-message__icon
      +icon(icon.name, `svg-icon--${color}`)(width=icon.width height=icon.height)
    .status-message__info
      .status-message__text
        p(class=`p-xl font-semibold text-${color}`) #{text}
