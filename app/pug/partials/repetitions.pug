mixin repetitions(props={})

  .row-group.row-group--nowrap.row-group--sm.row-group--align-center
    .row-group__item
      p Rep <span class="text-brick-red">(-30%)</span>
    .row-group__item
      +button({bg:'white', size:'30', shadow:true, noEvents:true})(type="button")
        +icon({name:'eye', fill:'surfie-green', width:'15', height:'9'})
