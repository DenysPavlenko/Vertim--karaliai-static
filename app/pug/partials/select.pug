include /partials/input
include /partials/button

mixin select(props = {})
  -const { classes, label, options, auto, bordered, transparent, search } = props;
  -
    const classnames = classNames({
      'select': true,
      'js-select': true,
      'select--bordered': bordered,
      'select--auto': auto,
      'select--transparent': transparent,
      [classes]: classes,
    })

  div(class=classnames)
    +button({classes:'select__label js-select-label', stadard:false})(data-selected=label.name type="button")
      | !{label.content}
    .select__wrap.js-select-wrap
      if(search)
        .select__search
          +input({size:'sm', bordered:true, classes:'js-select-search'})(type="text" placeholder="Type something")
      div(class="select__options js-select-options")
        div(data-select-simplebar class="custom-scroll select__options-scroll")
          each option in options
            div(class="select__option js-select-option" data-option=option.name)
              | !{option.content}

    input(type="hidden" class="select__input js-select-input")
