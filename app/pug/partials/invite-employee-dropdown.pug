include /partials/button
include /partials/input

mixin invite-employee-dropdown(props = {})

  .dropdown.invite-employee-dropdown.js-dropdown(data-dropdown="notifications")
    .dropdown__toggle.invite-employee-dropdown__toggle(data-dropdown-toggle="notifications")
      +button({bg:'surfie-green'})(type="button")
        span Invite employee
        +icon({name:'add-person', fill:'white', width:'20', height:'13', classes:'button__icon'})
    .dropdown__body.invite-employee-dropdown__body
      .invite-employee-dropdown__links
        .invite-employee-dropdown__link
          .invite-employee-dropdown__link-title Name of this link
          .invite-employee-dropdown__link-input-wrap
            .input-group.input-group--absolute
              +input({bg:'alabaster', classes:'input-group__input invite-employee-dropdown__link-input'})(value="vertimukaraliai.lt/officeworker-registration")
              .input-group__append
                p Copy