include /partials/button
include /partials/input
include /partials/close
include /partials/content-header

mixin invite-employee-dropdown(props = {})

  .dropdown.invite-employee-dropdown.js-dropdown(data-dropdown="notifications")
    .dropdown__toggle.invite-employee-dropdown__toggle(data-dropdown-toggle="notifications")
      +button({bg:'surfie-green'})(type="button")
        span Invite employee
        +icon({name:'add-person', fill:'white', width:'20', height:'13', classes:'button__icon'})
    .dropdown__box.invite-employee-dropdown__box
      .invite-employee-dropdown__header
        +content-header({title:'Invite employee'})
      .invite-employee-dropdown__body
        .invite-employee-dropdown__items
          +times(2)
            .invite-employee-dropdown__item
              .invite-employee-dropdown__name
                +input({bg:'white', classes:'invite-employee-dropdown__item-name'})(value="Name of this link")
              .invite-employee-dropdown__link
                .input-group
                  +input({border:'alto', classes:'input-group__input invite-employee-dropdown__link-input'})(value="vertimukaraliai.lt/officeworker-registration")
                  .input-group__append
                    +button({type:'inline', color:'surfie-green'})(type="button")| Copy
                .invite-employee-dropdown__remove
                  +close({color:'brick-red', size:'14'})
        .invite-employee-dropdown__button
          +button({bg:'surfie-green'})(type="button")
            span Add new link
            +icon({name:'plus', fill:'white', width:'10', height:'10', classes:'button__icon'})
