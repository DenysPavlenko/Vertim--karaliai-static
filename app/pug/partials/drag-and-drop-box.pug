include /partials/button

mixin drag-and-drop-box(props = {})

  .drag-and-drop-box
    .drag-and-drop-box__label
      span.drag-and-drop-box__label-title Drag and drop files
      +button({bg:'alabaster', type:'squere'})(type="button" class="drag-and-drop-box__label-button")
        +icon({name:'plus', fill:'surfie-green', width:'14', height:'14'})
