extends /layouts/main
include /partials/input-animation
include /partials/button
include /partials/lang-select
include /partials/form-divider
include /partials/status-message
include /partials/link

block variables
  - const title = 'Login page'

block content
  .login-page
    .container
      .login-page__lang
        +lang-select()
      .login-page__box
        .form-box
          .form-box__header
            .form-box__icon
              img(src="images/logo.svg", alt="logo")
            .form-box__title
              h2.text-surfie-green Log in
          .form-box__form
            form.form
              .form__line
                .form-group
                  +input-animation({label:'Email:', name:'email', animated:true})(type="email")
              .form__line
                .form-group
                  +input-animation({label:'Password:', name:'password', animated:true})(type="password")
              .form__line
                .column-group.column-group--md.column-group--justify-items-center
                  .column-group__item
                    +button({fluid:true})(type="submit")| Sign in
                  .column-group__item
                    +status-message({title:'Oops... Incorrect Email or Password.', icon:{name:'warning', width:'24', height:'24'}, color:'brick-red'})
                  .column-group__item
                    +link({link:'#'})| Forgot password?

          .form-box__divider
            +form-divider()

          .form-box__buttons
            .button-group.button-group--column
              +button({fluid:true, classes:'button-group__button', bg:'cornflower-blue'})(type="button")
                .button__prepend
                  +icon({name:'google', fill:'white', width:'25', height:'25'})
                span Sign in with Google

          .form-box__footer
            +link({link:'#', underline:true})| Create an account
