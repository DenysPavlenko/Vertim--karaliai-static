.settings-general
  .settings-general__row
    //- Column
    .settings-general__avatar
      .settings-general__avatar-wrap
        +avatar({size:'xl', image:'images/user/avatar.jpg'})
        .settings-general__avatar-button
          +button({bg:'alabaster', type:'round', size:'50'})(type="button" data-modal-open="edit-avatar-modal")
            +icon({name:'camera', fill:'surfie-green', width:'18', height:'16'})
      .settings-general__avatar-date
        p.p-sm Member since: 2015-04-12
      .settings-general__avatar-password
        +link()(data-modal-open="password-change-modal")| Change password
    //- Column
    .settings-general__list
      .settings-general__heading
        .row-group.row-group--align-center
          .row-group__item
            h5 General information:
          .row-group__item
            +inline-button({title:'Edit', link:'#', icon:{name:'pencil', width:'12', height:'12', fill:'surfie-green'}})
      .info-list
        each item in list1
          .info-list__item
            .info-list__left
              .font-semibold.text-silver-chalice #{item.left}
            .info-list__right
