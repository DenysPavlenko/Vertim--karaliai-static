.application-form__card
  .application-form__card-line
    .form-group
      .form-group__header
        h5 Transcribing?
      .row-group
        .row-group__item
          +radio({label:'Yes', name:'transcribing', value:'yes'})(data-radio-toggle)
        .row-group__item
          +radio({label:'No', name:'transcribing', value:'no'})

  div(data-radio-toggle-content="transcribing")
    .application-form__card-line
      .row
        div(class="col-12 col-md-6 mb-25 mb-md-0")
          .form-group
            .form-group__header
              p What languages do you write?
            .row
              div(class="col-12 col-lg-6")
                +translation-select()
        div(class="col-12 col-md-6")
          .form-group
            .form-group__header
              p Your prefered price per <span class="font-bold">1 word</span>
            .row-group.row-group--align-center.row-group--0
              .row-group__item
                +input({bg:'alabaster'})(type="number" placeholder="0.00" style="min-width:70px")
              .row-group__item
                +currency-select()

    .application-form__card-line
      +button({border:'surfie-green'})(type="button")
        span Add language
        +icon({name:'plus', fill:'surfie-green', width:'10', height:'10', classes:'button__icon'})

    .application-form__card-line
      .form-group
        .form-group__header
          +checkbox({ label:'Additional (custom) services:', checked:true })
        .row-group.row-group--align-center.row-group--sm
          .row-group__item
            p Your price per <span class="font-bold">1 hr</span>
          .row-group__item.row-group__item--flex-1
            .row-group.row-group--nowrap.row-group--0
              .row-group__item.row-group__item--flex-1
                +input({bg:'alabaster'})(type="number" placeholder="0.00" style="min-width:70px")
              .row-group__item
                +currency-select()
