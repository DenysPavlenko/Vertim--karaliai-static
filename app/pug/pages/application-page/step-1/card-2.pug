.application-form__card

  .application-form__card-line
    .form-group
      .form-group__header
        h5 Translation
      .row-group
        .row-group__item
          +radio({label:'Yes', name:'translation', value:'yes'})(data-radio-toggle)
        .row-group__item
          +radio({label:'No', name:'translation', value:'no'})

  div(data-radio-toggle-content="translation")
    .application-form__card-line
      .row
        div(class="col-12 col-md-6")
          .form-group
            .form-group__header
              p What combinations do you translate?
            +select({
              label:{name:'select1', content:`<span>Select 1</span>`},
              options:[
                {name:'select1', content:`<span>Select 1</span>`},
                {name:'select2', content:`<span>Select 2</span>`},
                {name:'select3', content:`<span>Select 3</span>`},
              ]
            })

    .application-form__card-line
      .row
        div(class="col-12 col-md-6 col-lg-7 mb-25 mb-md-0")
          .form-group
            .form-group__header
              p What combinations do you translate?
            .row
              div(class="col-12 col-lg-6 mb-15 mb-lg-0")
                .row-group.row-group--align-center.row-group--sm
                  .row-group__item
                    p From
                  .row-group__item.row-group__item--flex-1
                    +translation-select()
              div(class="col-12 col-lg-6")
                .row-group.row-group--align-center.row-group--sm
                  .row-group__item
                    p To
                  .row-group__item.row-group__item--flex-1
                    +translation-select()
        div(class="col-12 col-md-6 col-lg-5")
          .form-group
            .form-group__header
              p Your prefered price per <span class="font-bold">1700 c.w.s.:</span>
            .row-group.row-group--align-center.row-group--0
              .row-group__item
                +input({bg:'alabaster'})(type="number" placeholder="0.00" style="min-width:70px")
              .row-group__item
                +currency-select()

    .application-form__card-line
      +button({border:'surfie-green'})(type="button")
        span Add combination
        +icon({name:'plus', fill:'surfie-green', width:'10', height:'10', classes:'button__icon'})
