.application-form__card

  .application-form__card-line
    .row
      div(class="col-12 col-md-10 col-lg-7")
        .form-group
          .form-group__header
            h5 Please select your strongest fileds:
          .row.mb-15
            div(class="col-12 col-xs-6 mb-10 mb-xs-0")
              .column-group.column-group--sm
                .column-group__item
                  +checkbox({ label:'Technical', checked:true })
                .column-group__item
                  +checkbox({ label:'Financial'})
                .column-group__item
                  +checkbox({ label:'Scientifics'})
                .column-group__item
                  +checkbox({ label:'Travel'})
            div(class="col-12 col-xs-6")
              .column-group.column-group--sm
                .column-group__item
                  +checkbox({ label:'Medicial', checked:true })
                .column-group__item
                  +checkbox({ label:'Standard documents'})
                .column-group__item
                  +checkbox({ label:'Automative'})
                .column-group__item
                  +checkbox({ label:'Education'})
          .row
            div(class="col-12 col-md-6")
              +input-animation({label:'Custom:'})(type="text" id="custom")
